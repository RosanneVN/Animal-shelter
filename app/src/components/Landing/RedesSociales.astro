---
import Facebook from "../icons/Facebook.astro";
import Instagram from "../icons/Instagram.astro";
import Transparent from "../icons/Transparent.astro";
import Twitter from "../icons/Twitter.astro";
import Youtube from "../icons/Youtube.astro";
---

<section
  class="flex flex-row w-full px-36 py-20 place-content-center gap-10 relative"
>
  <div class="bg-secondary rounded-full p-5">
    <a href="/">
      <Facebook color={"#fff"} />
    </a>
  </div>
  <div class="bg-primary rounded-full p-5">
    <a href="/">
      <Twitter color={"#fff"} />
    </a>
  </div>
  <div class="bg-secondary rounded-full p-5">
    <a href="/">
      <Instagram color={"#fff"} />
    </a>
  </div>
  <div class="bg-primary rounded-full p-5">
    <a href="/">
      <Youtube color={"#fff"} />
    </a>
  </div>

  <div class="w-full absolute bottom-0 scale-x-[-1]">
    <Transparent color={"#003049"} />
  </div>
</section>
